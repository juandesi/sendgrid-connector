<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:send-grid="http://www.mulesoft.org/schema/mule/send-grid"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.mulesoft.org/schema/mule/send-grid http://www.mulesoft.org/schema/mule/send-grid/1.0/mule-send-grid.xsd">

    <send-grid:config-type name="config" consumerKey="my-key" consumerSecret="my-secret">
        <send-grid:oauth-callback-config domain="localhost" localPort="8082" path="callback"/>
    </send-grid:config-type>

    <flow name="testFlow">
        <send-grid:my-processor config-ref="config" content="Another string"/>
    </flow>
</mule>
